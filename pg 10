pip install wikipedia requests BeautifulSoup
import wikipedia
import requests
from bs4 import BeautifulSoup
def fetch_info(name):
    try:
        page = wikipedia.page(name)
        summary = wikipedia.summary(name, sentences=2)
        response = requests.get(page.url)
        soup = BeautifulSoup(response.text, 'html.parser')
        rows = soup.select('.infobox tr')  # selects table rows from infobox
    except wikipedia.exceptions.DisambiguationError as e:
        return f"Disambiguation Error: {e.options}"
    except wikipedia.exceptions.PageError:
        return f"No page found for '{name}'"
    founded = "Not Found"
    headquarters = "Not Found"
    for row in rows:
        th = row.find("th")
        td = row.find("td")
        if not th or not td:
            continue
        t = th.text.lower()
        if "founded" in t or "established" in t:
            founded = td.text.strip()
        elif "headquarters" in t or "location" in t:
            headquarters = td.text.strip()
    cities = ["New York", "London", "Tokyo", "Bangalore", "Davangere"]
    branches = [city for city in cities if city.lower() in page.content.lower()]
    if not branches:
        branches = ["Not Found"]
    return f"""Name: {name}
Founded: {founded}
Headquarters: {headquarters}
Branches: {", ".join(branches)}
Summary: {summary}
"""
print(fetch_info(input("Enter Institution name: ")))
